            <ColumnDefinition Width="905*"/>
            <ColumnDefinition Width="176*"/>
            <ColumnDefinition Width="123*"/>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="image1" Grid.ColumnSpan="5" HorizontalAlignment="Left" Height="699" Margin="0,0,-73,0" VerticalAlignment="Top" Width="1386" Source="Imagenes/sparkling-glassware-stands-long-table-prepared-wedding-di_8353-688.jpg" Stretch="Fill"/>
