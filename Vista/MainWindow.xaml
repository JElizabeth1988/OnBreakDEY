         xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"  
        
        xmlns:local="clr-namespace:Vista"
        mc:Ignorable="d"
        Title="Bienvenido a OnBreak" Height="729.994" Width="1309.816" WindowTitleBrush="Black" Icon="Imagenes/white_logo_dark_background.jpg" WindowStartupLocation="CenterScreen" FontWeight="Bold" WindowState="Maximized">


    <Grid Background="#FF129DDA" Margin="-6,0,-5.333,0">
