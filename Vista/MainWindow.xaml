        </Controls:Tile>



        <Controls:Tile x:Name="tile_lis_cliente" Click="Tile_Click_2" Margin="219,453,0,0" HorizontalAlignment="Left" Height="179" Width="195"  VerticalAlignment="Top" Background="{x:Null}"  >
